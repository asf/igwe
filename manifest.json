{

  "manifest_version": 2,
  "name": "IGDownload",
  "version": "1.4.1",
  "default_locale": "en",
  "description": "Allows you to download IG fotos.",

  "permissions": [
    "contextMenus",
    "activeTab",
    "downloads",
    "notifications",
    "storage",
    "tabs"
],

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "matches": ["*://*.instagram.com/*"],
      "js": ["igcs.js"]
    }
  ],

  "applications": {
    "gecko": {
      "id": "ig_download@example.com",
      "strict_min_version": "42.0",
      "update_url": "https://asf-nc.hopto.org/igwe/updates.json"
    }
  },

  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },

  "web_accessible_resources": ["floppy-o.png"]
}
